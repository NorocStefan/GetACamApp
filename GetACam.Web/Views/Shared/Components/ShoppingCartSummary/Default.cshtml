@model GetACam.Web.ViewModels.ShoppingCartViewModel

@if (Model.ShoppingCart.OrderItems.Count > 0)
{
    <li>
        <a>
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <span id="cart-status">
                @Model.ShoppingCart.OrderItems.Count
            </span>
        </a>
    </li>
}
